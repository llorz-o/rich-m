{
    "compilerOptions": {
        "jsx": "preserve",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./*"],
            "u@/*": ["src/utils/*"]
        }

    },
    "typeRoots": ["./types"],
    "include": [
        "src/*",
        "src/**/*",
        "types/**/*",
        "index.ts"
    ],
    "exclude": [
        "./node_modules",
        "**/*.spec.ts",
        "**/*.spec.js"
    ]
}
